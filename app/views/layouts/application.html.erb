<!DOCTYPE html>
<html>
  <head>
    <title>RemoteApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("RemoteChat", "/rooms/index") %>
        <% else %>
          <%= link_to("RemoteChat", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
            <%= link_to("マイページ", "/user/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("チャットルーム一覧", "/rooms/index")%>
          </li>
          <li>
            <%= link_to("タスク一覧", "/task/index") %>
          </li>
          <li>
            <%= link_to("新規タスク", "/task/new") %>
          </li>
          <li>
            <%= link_to("ユーザー一覧", "/user/index") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", {method: :post})%>
          </li>
        <% else %>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
